        <script type="text/javascript">
            (function($){

                var parley_slider = $('#parley_slider').owlCarousel({
                    stagePadding: 0,
                    margin:18,
                    items : 1,
                    merge: true,
                    loop : true,
                    navigation: false,
                    nav: true,
                    slideSpeed: 1000,
                    rewindSpeed:1000
                });

                parley_slider.on('changed.owl.carousel',function(event){
                    var index = $(event.currentTarget).find('.owl-stage .owl-item').eq(event.item.index).find('.slide_box').attr('data-item');
                    $('.slider_title ul li').removeClass('on').eq(index).addClass('on');
                    $('.slider_imgs ul li').removeClass('on').eq(index).addClass('on');
                });

                $('.video-button').bind('click',function(){
                    var ytbId = $(this).attr('data-video-id');
                    var html = '<div id="video-layer" style="">';
                    html += '	<div class="bg" ></div>';
                    html += '	<div class="video-box"></div>';
                    html += '	<a href="javascript:void(0)" class="close_x_btn white"></a>';
                    html += '</div>';

                    $('html').css({overflow: 'hidden'});
                    $('body').append(html);

                    $('#video-layer .close_x_btn').bind('click',function(){
                        $('html').css({overflow: 'scroll'});
                        $('#video-layer ').remove();
                    });


                    setTimeout(function(){
                        $('#video-layer').addClass('loaded');

                        $('#video-layer .video-box').append('<iframe width="100%" height="100%" src="http://www.youtube.com/embed/'+ytbId+'?rel=0" frameborder="0" allowfullscreen></iframe>')
                    },100);


                });





            })(jQuery);
        </script>


