    <script type="text/javascript">

        (function($){

            var scrollF = function(){

                var scrollArray = [];
                // var thisPos = $(this).scrollTop();
                var scrollCon = document.querySelectorAll('.scrollbox');

                for(var i = 0; i < scrollCon.length; i++){
                    var mypos = scrollCon[i].offsetTop;
                    scrollArray.push(mypos);
                }

                for(var pos = 0; pos < scrollArray.length; pos++){
                    var thisPos = $(this).scrollTop() + $('#alphaskin .top').height();
                    if(thisPos >= scrollArray[pos]){
                        $('#alphaskin .scrollbox').eq(pos).addClass('on');
                    }
                }
            }

            $(window).scroll(scrollF);

            // video
            $('.video-button').bind('click', function() {
                var ytbId = $(this).attr('data-video-id');
                var html = '<div id="video-layer" style="">';
                html += '	<div class="bg" ></div>';
                html += '	<div class="video-box"></div>';
                html += '	<a href="javascript:void(0)" class="close_x_btn white"></a>';
                html += '</div>';

                $('html').css({
                    overflow: 'hidden'
                });
                $('body').append(html);

                $('#video-layer .close_x_btn').bind('click', function() {
                    $('html').css({
                        overflow: 'scroll'
                    });
                    $('#video-layer ').remove();
                });


                setTimeout(function() {
                    $('#video-layer').addClass('loaded');

                    $('#video-layer .video-box').append('<iframe width="100%" height="100%" src="http://www.youtube.com/embed/' + ytbId + '?rel=0" frameborder="0" allowfullscreen></iframe>')
                }, 100);
                return false;
            });

        })(jQuery);

    </script>

