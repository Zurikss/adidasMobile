@import './app/css/adidas/scss/common/mixin.scss';
@import './app/css/adidas/scss/common/common.scss';

#falcon {
	position: relative;

	div {
		img {
			width: 100%;
		}

		.link {
			position: absolute;
			text-indent: -9999px;
			display: block;
		}
	}

	.bottom,
	.cont,
	.video_area,
	.visual {
		position: relative;
	}

	.visual {
		position: relative;

		.txt {
			position: absolute;
			bottom: 0;
			left: 0;
			padding: 3rem 1.5rem;

			h1 {
				font: 3.14rem/1rem 'adinenuPro-black';
				color: white;
			}

			p {
				font: 400 1rem/1.3rem 'NotoSansKR';
				color: white;
				margin: 10px 0 30px;
			}

			.btn1 {
				a {
					font: 100 1.18rem/1rem 'NotoSansKR';
					color: white;
					background: #000;
					padding: 11px 40px;

					img {
						width: 11px;
						padding: 0 0 0 6px;
					}
				}
			}
		}
	}
	.slider_look{
		position: relative;
		padding:4rem 2rem;
		margin: 0 auto;
		background: url('/images/adidas/event/falcon/180830/bg_look.jpg') 0 0 no-repeat;
		background-size: 100% 100%; 
		.img_box{
			position: relative;
			overflow: hidden;
			@include css3(transition, all 0.5s);
			opacity: 1;
			ul{
				position: relative;
				li{
					position: relative;
					float: left;
					width: 80%;
					img{
						width: 100%;
					}
				}
			}
		}
		.indicator{
			text-align: center;
			padding-top: 1.5rem;
			li{
				display: inline-block;
				a{
					width: 0.9rem;
					  height: 0.9rem;
					  display: block;
					  background-color: #44403d;
					  border-radius: 10px;
					  margin: 0 5px;
					&.on{
						background-color: #fff;
					}
				}
			}
		}
	}
	.bottom{
		img{
			display: block;
		}
	}
}
