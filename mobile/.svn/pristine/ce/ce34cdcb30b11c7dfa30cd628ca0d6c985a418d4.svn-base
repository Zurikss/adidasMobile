@import './app/css/adidas/scss/common/mixin.scss';
@import './app/css/adidas/scss/common/common.scss';

#wc2018_omb{

	.button{
		padding: 1.4rem 0;
		display: block;
		background: #000;
		color: #fff;
		font-size: 1.15rem;
		text-align: center;

		&::after{
			margin-left: 4px;
			vertical-align: middle;
			font-size: 1rem;
		}

		&.white{
			background: #fff;
			color: #000;
		}
	}

	.box{
		position: relative;
		.image{
			a{
				display: block;
			}

			img{
				width: 100%;
			}
		}
	}
	.masthead{
		.copy_wrapper{
			width: 100%;
			padding: 0 5rem;
			position: absolute;
			bottom: 0;
			left: 0;
			z-index: 2;
			box-sizing:border-box;
			-webkit-box-sizing:border-box;

			h2{
				margin-bottom: 2rem;
				img{
					width: 100%;
				}
			}

			h3{
				margin-bottom: 2rem;
				font-size: 1.2rem;
				color: #fff;
				text-align: center;
				letter-spacing: -0.5px;
			}

			.arrow{
				margin: 1.2rem 0;
				text-align: center;
				img{
					width: 15px;
				}
			}
		}
	}
	/* masthead END */

	.features{
		.copy_wrapper{
			width: 100%;
			padding:5rem;
			box-sizing:border-box;
			-webkit-box-sizing:border-box;

			h4{
				margin-bottom: 2rem;
			}

			.desc{
				font-size: 1.1rem;
				line-height: 1.5rem;
				margin-bottom: 2rem;
				letter-spacing: -0.5px;
				word-break:keep-all;
			}
		}
	}
}
