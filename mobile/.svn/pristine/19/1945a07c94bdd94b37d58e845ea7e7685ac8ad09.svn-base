@import './app/css/adidas/scss/common/mixin.scss';
@import './app/css/adidas/scss/common/common.scss';

#video-layer{
	position:fixed;top:0;left:0;width: 100%;height: 100%;z-index:1000;
}

#video-layer .bg{
	width: 100%;
	height: 100%;

	position: absolute;
	top: 0;
	left: 0;

	transform-origin:center center;
	-webkit-transform-origin:center center;
	transform:scale(0);
	-webkit-transform:scale(0);
	opacity:0;
	background:#000;
	z-index:1;

	transition:all 0.4s;
	-webkit-transition:all 0.4s;


}

#video-layer.loaded .bg{
	opacity: 1;
	transform:scale(1.2);
	-webkit-transform:scale(1.2);
}

#video-layer .video-box{
	position: relative;
	width: 100%;
	height: 100%;
	z-index: 3;
}

#video-layer .close_x_btn{
	width: 70px;
	height: 70px;
	position: absolute;
	top: 0;
	right: 0;
	z-index: 5;
	opacity: 0;
}

#video-layer.loaded .close_x_btn{
	opacity: 1;
}


#danielle{
	.inner{		
		padding: 0 2rem;
		.vbox{
			opacity: 0;
			transition: 0.4s;
		}
		.statement{
			position: relative;
			top: 50px;
			opacity: 0;
			transition: 0.4s;
		}
	}
	.buy{
		width: 110px;	
		text-align: center;
		background: #fff;
		a{
			display: inline-block;
			color:#000;
			font:1rem/3.2rem 'NotosansKR';
			letter-spacing: 0px;
			&:after{
				display: inline-block;
				margin-left: 3px;
			}
		}
	}
	.main{
		position: relative;
		width: 100%;
		background: #edbb65;
		.inner{
			overflow: hidden;
			padding-bottom: 4rem;
			>img{
				width: 100%;
			}
			.statement{				
				position: relative;
				top: 0;
				margin-top: -80px;
				height: auto;
				text-align: left;
				h2{
					img{
						width: 50%;
						margin-bottom: 15px;
					}	
				}
				h1{
					font:700 30px/36px 'AdihausDIN-Bold';
					color: #1076f6;
					
				}		
				p{
					padding: 10px 0 20px;
					font:500 13px/20px 'NotoSansKR','Nanum Gothic';
					color: #1076f6;	
					letter-spacing: -1px;					
				}
			}			
		}
	}
	.cont1{
		position: relative;		
		background: #0840a1;
		.inner{
			padding: 4rem 2rem;
			.slider_wrap{
				position: relative;				
				ul{
					position: relative;
					.owl-item.active{
						.num_title span{
							margin-right: 0;
							opacity: 1;
						}
						.num_title span:after{
							width: 100%;
						}
					}
					li{
						float: left;
						position: relative;
						top:0;
						img{
							width: 100%;
						}
					}
	
				}
				ul:after{
					content: '';
					display: block;
					clear: both;
				}
				.owl-controls{	
					.owl-dot{
						// position: relative;
						float: left;
						text-align: center;
						span{
							display: inline-block;
							padding:1rem 0 0 0;
							font:1.5rem/2rem 'NotoSansKR';
							text-align: center;
							color:#000;
							letter-spacing: 0;
						}
					}
				}				
				.owl-dots{
					position: absolute;
					width: 100%;
					text-align: center;
					padding:1.5rem 0;
					.owl-dot{
						display: inline-block;
						float:none;
						margin:0 8px;
						width: 1.4rem; height: 1.4rem;
						background: #84a0d0;
						border-radius: 50px;
						-webkit-border-radius: 50px;
						&.active{
							background: #fff;
						}
					}
				}
			}
			.statement{
				position: relative;
				height: auto;
				text-align: right;			
				h1{
					margin-top: 60px;
					font:700 30px/36px 'AdihausDIN-Bold';
					color: #d6ada7;
					text-align: right;
				}		
				p{
					padding: 10px 0 0;
					font:500 13px/20px 'NotoSansKR','Nanum Gothic';
					color: #d6ada7;	
					letter-spacing: -1px;
					text-align: right;					
				}
			}
		}
	}
	.cont2{
		position: relative;
		background: #d9afa1;
		.inner{
			overflow: hidden;
			padding: 4rem 2rem;
			>img{
				width: 100%;
			}
			.statement{		
				position: relative;
				height: auto;
				text-align: left;				
				h1{					
					font:700 30px/36px 'AdihausDIN-Bold';
					color: #ae684e;
					
				}		
				p{
					padding: 10px 0 20px;
					font:500 13px/20px 'NotoSansKR','Nanum Gothic';
					color: #ae684e;	
					letter-spacing: -1px;					
				}
				.buy{
					margin-bottom: 20px;
				}
			}			
		}		
	}
	.cont3{	
		position: relative;
		background: #fff;
		.inner{	
			padding: 4rem 2rem;
			.visual_video{
				position: relative;							
