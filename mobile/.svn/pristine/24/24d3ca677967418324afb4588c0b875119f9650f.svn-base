@import './app/css/adidas/scss/common/mixin.scss';
@import './app/css/adidas/scss/common/common.scss';

#originals_climacool{
	.cta-button{
		display: inline-block;
		padding: 10px 15px;
		border: 2px solid  #fff;
		font: 1.2rem/1.2rem 'NotoSansKR';
		vertical-align: middle;

		&::after{
			position: relative;
			display: inline-block;
			vertical-align: middle;
			margin:0 0 0 5px;
			top: 1px;
		}
	}
	.box{
		width: 100%;
		position: relative;
		padding-bottom: 150%;

		.copy_container{
			width: 100%;
			position: absolute;
			bottom: 20px;
			left: 0;
			z-index: 1;

			.copy_wrap{
				text-align: center;

				>*{
					color: #fff;
				}

				h3{
					margin-bottom: 10px;
					font-size: 2.2rem;
					text-transform: uppercase;
					letter-spacing:15px;
				}

				p{
					margin-bottom: 15px;
					font:1.2rem 'NotoSansKR';
				}
			}
		}

		&#box1{
			.copy_container{
				bottom: 20px;
				.copy_wrap{
					padding: 20px;
					text-align: left;
				}
			}

		}

		img{
			width: 100%;
			height: 100%;
			position: absolute;
			top: 0;
			left: 0;
			object-fit:cover;
			-webkit-object-fit:cover;
		}
	}
}
