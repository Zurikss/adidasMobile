@import './app/css/adidas/scss/common/mixin.scss';
@import './app/css/adidas/scss/common/common.scss';

.buy{
	width: 100%;
	a{
		display: inline-block;
		width: 180px;
		height: 40px;
		text-align: center;
		background-color: #000;
		color:#fff;
		font:1rem/40PX 'NotosansKR';
		letter-spacing: 0px;
		margin-top: 10px;
		&:after{
			display: inline-block;
			margin-left: 5px;
		}
	}
}

#spring_festival{
	.main{
		overflow: hidden;
		position: relative;
		text-align: center;
		img{
			width: 100%;
		}
	}		
	.info-hour{
		position: relative;
		background: #fff;
		.box{
			position: relative;
			width: 100%;
			img{
				width: 100%;
			}
			>a{
				display: inline-block;			
				position: absolute;
				text-indent: -5000px;
				z-index: 5;
			}			
		}
	}	
}