@import "./app/MO/reebok/css/scss/about.scss";

.nano7{
    .video_visual{
        h2{
            margin-bottom:1.5rem;
            width:inherit;
            height: inherit;
            text-indent: 0;
            background:none;
            text-align: center;
            color:#fff;
            text-transform: uppercase;
            font:5rem/5.3rem 'QStencil';
            span{
                font:2.5rem/3.5rem 'QStencil';
                vertical-align: top;
            }
        }
        .desc{
            margin-bottom:1.5rem;
            text-align: center;
            color:#fff;
            letter-spacing: 3px;
            text-transform: uppercase;
            font:300 1.7rem/1.3rem 'dinpro cond';
        }
        .desc_eng2{
            text-align:center;
            color:#fff;
            padding-bottom:5%;
            font:300 1.3rem/1.9rem 'NotoSansKR';
        }
        .video-btn{
            margin:0 auto;
        }
    }
    .lookbook{
        padding:3rem 1.2rem 0;
        background: url('/images/reebok/about/nano7/main_bg.png') 0 0 no-repeat;
        background-size:100% 100%;
        h3{
            margin: 2rem 3rem;
            padding:2rem 0 0 0;
            border-top:2px solid #000;
            text-align: center;
            img{
                width: 100%;
            }
            p{
            display: inline-block;
            margin:0 auto;
            padding:3% 4%;
            color:#000;
            font:4rem/4.2rem 'QStencil';
            text-transform: uppercase;
            }
        }
        .desc{
            margin-bottom:1.5rem;
            text-align: center;
            color:#000;
            text-transform: uppercase;
            font:300 1.2rem/1.8rem 'dinpro cond';
            span{
                font:300 1.5rem/1.5rem 'dinpro cond';
                vertical-align: bottom;
                letter-spacing: 0.1rem;
            }
        }
        .button_area{
            padding:1rem 0 3rem 0;
            a{
                padding:1.2rem 4.5rem;
            }
        }
    }
    .collections{
        position: relative;
        padding: 0;
        background: #5c5c5c url('/images/reebok/about/gigi_hadid/bg_collection.jpg') 0 0 repeat;
        background-size: 100% auto;
        h3{
            padding: 3.5rem 0px 1.8rem;
            color: #fff;
            font:500 2.4rem 'dinpro cond';
            text-align: center;
            text-transform: uppercase;
        }
        .num_paging{
            width: 100%;
            padding: 1rem 0px;
            position: absolute;
            bottom:12rem;
            a{
                position: relative;
                margin-right: 3.5rem;
                width:4rem;
                height:4rem;
                color:#000;
                background: #fff;
                font:2.5rem/4rem 'reefont-condensed';
            }
            a:last-child{
                margin-right: 0;
            }
            a:last-child:after{
                width: 0;
            }
            a:after{
                position: absolute;
                top:2rem;
                left:3.8rem;
                content: '';
                width: 5rem;
                height: 0.2rem;
                background: #fff;
            }
            .on{
                background: #c3dc81;
                color: #000;
            }
        }

        .collection_cut{
            overflow: hidden;
            ul{
                overflow: hidden;
                li{
                    position: relative;
                    float: left;

                    img{
                        width: 100%;
                    }
                    .txt{
                        position: absolute;
                        bottom: 0;
                        padding:2rem 1.2rem 3rem 1.2rem;
                        p.main{
                            padding-bottom: 1.2rem;
                            border-bottom:1px solid #c3dc81;
                            color:#fff;
                            font:1.8rem/1.8rem  'NotoSansKR';
                        }
                        p.desc{
                            color:#fff;
                            font:1.1rem/2rem  'NotoSansKR';
                        }
                    }
                }
            }
        }

        .prodlist_wrap{
            position: relative;

            .prodlist{
                position: absolute;
                top: 0;
                left: 0;
                padding: 0;
                opacity: 0;
                transition:opacity 0.3s;
                -webkit-transition:opacity 0.3s;
                z-index: 1;

                .tit{
                    height: 1.4rem;
                    overflow: hidden;

                    display: -webkit-box;
                    overflow: hidden;
                    text-overflow: ellipsis;
                    white-space:normal;
                    -webkit-line-clamp:1;
                    -webkit-box-orient: vertical;
                }
            }

            .active{
                opacity: 1;
                z-index: 2;
            }
            .fake{
                position: relative;
                opacity: 0;
                visibility: hidden;
            }

        }
    }
    .promotion{
        .top_img{
            img{
                width: 100%;
            }
        }
        .map_list{
            background: #fff;
            padding:1.5rem 1.2rem 1.2rem 1.2rem;
            border-bottom:1px solid #ccc;
            .txt{
                width: 82%;
                float: left;
                .main{
                    font:2rem/2rem  'NotoSansKR';
                    letter-spacing: -0.1rem;
                }
                .address{
                    font:1.1rem/2rem  'NotoSansKR';
                    padding:0.6rem 0 0.2rem 0;
                    letter-spacing: -0.1rem;
                }
                .num{
                    color:#6f6f6f;
                    font:1.1rem/2rem 'NotoSansKR';
                }

            }
            .map_img{
                width: 18%;
                float: right;
                text-align: right;
                padding: 1.8rem 0;
                a{
                    // display: inline-block;
                    background: #000;
                    img{
                        width: 50%
                    }
                }
            }
        }
        .map_list:last-child{
            border-bottom: 0;
        }
    }
}
// nano
