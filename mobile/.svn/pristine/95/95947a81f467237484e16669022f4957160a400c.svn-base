@import './app/css/adidas/scss/common/mixin.scss';
@import './app/css/adidas/scss/common/common.scss';


#atrics{
	position: relative;
	text-align: center;
	.scrollbox{
		p{
			opacity: 0 !important;
			@include css3(transition, all 0.6s);
		}

		&.on{
			p{
				opacity: 1 !important;
			}
		}
	}
	.strong{
		padding: 0 0 12px 0;
		font:700 2rem/2.1rem 'NotoSansKR';
		&.eng{
			font:700 2.5rem/2.6rem 'adinenuPro-black';
			letter-spacing: 0.5px;

		}
	}
	.small{
		font:700 1.2rem 'NotoSansKR';
	}
	.statement{
		position: relative;
		padding: 20px 0 24px;
		&.black{
			background: #000;
			p{
				color:#fff;
			}
			.btn{
				a{
					background: #fff;
					color:#000;
				}
			}
		}
	}
	.btn{
		display: inline-block;
		width: 175px;
		margin: 0 auto;
		a{
			display: block;
			margin: 0 0 20px 0;
			width: 100%;
			font:700 1.1rem/45px 'NotoSansKR';
			text-align: center;
			background: #000;
			color:#fff;
			&:after{
				margin-left: 5px;
			}
		}
	}
	.main{
		position: relative;
		img{
			// width: 100%;
		}
		video{
			width: 100%;
		}
		.txt{
			position: absolute;
		    width: 100%;
		    top: 30px;
		    left: 0;
		    text-align: center;
			>*{
				display: block;
				margin: 0 auto;
				color:#fff;
			}
			strong{
				font:700 2.5rem 'NotoSansKR';
			}
		}
		p{
			position: absolute;
		    bottom: 12px;
		    left: 0;
		    width: 100%;
		    text-align: center;
		    font: 500 1.3rem 'NotoSansKR';
		    color: #fff;
		}
	}
	.shoes{
		position: relative;
		.bg{
			img{
				width: 100%;
			}
		}
		video{
			width: 100%;
		}
		img{
			width: 100%;
		}
		.video_area{
		    width: 88%;
			position: absolute;
			top:50%;
			left:50%;
			transform: translate(-50%,-50%);
			-webkit-transform: translate(-50%,-50%);
		}
	}
	.banner_slider_wrap{
		position: relative;
		ul{
			li{
				img{
					width: 100%;
				}
			}
		}
		.owl-nav{
			position: absolute;
		    top: 50%;
		    width: 100%;
			.nav{
				overflow: hidden;
				span{
					position: absolute;
				}
				&.owl-prev{
					position: absolute;
					left:18px;
					width: 20px;
					height: 51px;
					@include css3(transition,left 0.4s ease-out 0.1s);
					span{
						animation: arrow 2s infinite;
						-webkit-animation: arrow 2s infinite;
					}
				}
				&.owl-next{
					position: absolute;
				    right: 21px;
					width: 20px;
					height: 51px;
					@include css3(transition,right 0.4s ease-out 0.1s);
					span{
						animation: arrow2 2s infinite;
						-webkit-animation: arrow2 2s infinite;
					}

				}
				span{
					font-size: 2rem;
				}
			}
		}

	}
}

@include keyframe(arrow){
	0%{
		left: 100%;
	}

	25%{
		left: 0%;
	}

	50%{
		left: 0%;
	}

	75%{
		left: 0%;
	}

	100%{
		left: -110%;
	}
}
@include keyframe(arrow2){
	0%{
		left: -100%;
	}

	25%{
		left: 0%;
	}

	50%{
		left: 0%;
	}

	75%{
		left: 0%;
	}

	100%{
		left: 110%;
	}
}
