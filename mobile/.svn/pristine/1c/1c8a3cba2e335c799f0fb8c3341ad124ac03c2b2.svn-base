@import "./app/MO/reebok/css/scss/about.scss";

.workout_story{
    background: url('http://imagem.reebok.co.kr/images/reebok/about/workoutstory/180103/bg.jpg') 0 0 repeat-y;
    //background: #000;
    background-size: 100vh auto;
    .main_cut{
        overflow: hidden;
        width: 100%;
        margin-bottom: 2rem;
        .inner{
            display: block;
            img{
                width: 100%;
            }
        }
    }
    /* main_cut END */
    .video_visual{
        padding-top: 25px;
        padding-bottom: 133%;
        .cover{
            top:44%;
        }
        .video-btn{
            top:1.5rem;
            margin:0 auto;
            border: 0 none;
            border-radius: 0;
            background: url('http://imagem.reebok.co.kr/images/reebok/about/workoutstory/180103/play.png') center center no-repeat;
            background-size: 70px 70px;
            &::before{
                display: none;
            }
        }
    }
    .prd_buybox{
        padding: 0 0 1.5rem;
        text-align: center;
        >img{
            width: 100%;
        }
        h3{
            padding: 1rem 0px 1rem;
            color: #000;
            font:700 3.5rem/3rem 'dinpro cond';
            text-align: center;
            text-transform: uppercase;
            letter-spacing: -0.05rem;            
        }
        a.button{            
            display: inline-block;  
            color:#000;
            background:url('http://imagem.reebok.co.kr/images/reebok/about/workoutstory/180103/btn.png') center center no-repeat;
            background-size: 200px 40px;
            font:500 16px/40px 'NotoSansKR';
            text-align: center;
            width: 200px;
            height: 40px; 
            margin-bottom: 1rem;
            .icons.aft{
                padding-left: 5px;
            }
        }
    }
    .prd_section{
        position: relative;
        .prd_img{
            img{
                width: 100%;
            }
        }
        .prd_buy{
            position: relative;
            width: 100%;
            text-align: left;
            padding: 18px 15px 0;
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
            img{
                position: absolute;
                top:14px;
                left:15px;
                width: 24px;
            }
            em{
                font:300 15px/15px 'dinpro cond';
                padding-left: 35px;
            }
            em.icons{
                padding-left: 6px;
            }
            span{
                font:500 16px/16px 'NotoSansKR';
                padding-left: 15px;
            }
            a{
                font:500 14px/14px 'NotoSansKR';
                float: right;
            }
        }
    }    
    /* main END */
}
