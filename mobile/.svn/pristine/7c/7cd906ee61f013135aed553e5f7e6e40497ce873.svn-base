@import "./app/MO/reebok/css/scss/about.scss";

.nano7_w{
    .video_visual{
        h2{
            margin-bottom:1.5rem;
            width:inherit;
            height: inherit;
            text-indent: 0;
            background:none;
            text-align: center;
            color:#fff;
            text-transform: uppercase;
            font:5rem/5.3rem 'QStencil';
            span{
                font:2.5rem/3.5rem 'QStencil';
                vertical-align: top;
            }
        }
        .desc{
            margin-bottom:1.5rem;
            text-align: center;
            color:#fff;
            letter-spacing: 3px;
            text-transform: uppercase;
            font:300 1.7rem/1.3rem 'dinpro cond';
        }
        .video-btn{
            margin:0 auto;
        }
    }
    .main{
        @include box-sizing(border-box);
        position: relative;
        width: 100%;
        padding-bottom: 123%;
        .bg{
            position: absolute;
            width: 100%;
            height: 100%;
            img{
                width: 100%;
            }
        }
        .logo{
            position: absolute;
            top: 45%;
            left: 15px;
            a{
                display: block;
                margin-bottom: 0.5rem;
                padding:0.2rem 2rem 0 2rem;
                text-align: center;
                color:#000;
                text-transform: uppercase;
                font:500 1.2rem/3.5rem 'dinpro cond','NotoSansKR';
                border:1px solid #000;
            }
        }
    }

    .lookbook{
        background: #000;
        .collections{
            position: relative;
            background-size: 100% auto;
            .title{
                position: absolute;
                top:0;
                z-index: 1;
                width: 100%;
                text-align: center;
                background: url('/images/reebok/about/nano/men/180115/bg.jpg') no-repeat;
                background-size: 100% 100%;
                h3{
                    margin: 35px 3rem 0;
                    // padding:2rem 0 0 0;
                    text-align: center;
                    img{
                        width: 86%;
                    }
                }
                p{
                    display: block;
                    margin:0 auto;
                    color:#fff;
                    font:0.98rem/1.5rem 'NotoSansKR';
                    text-transform: uppercase;
                    padding: 20px 0;
                    strong{
                        color:#e06900;
                        font-weight: 600;
                    }
                }
                .logo{
                    position: relative;
                    text-align: center;
                    padding-bottom: 3rem;
                    a{
                        display: inline-block;
                        padding:0.2rem 2.4rem 0 2.4rem;
                        text-align: center;
                        color:#fff;
                        text-transform: uppercase;
                        font:1.2rem/3.5rem 'dinpro cond','NotoSansKR';
                        border:1px solid #fff;
                    }
                }
            }
            h3{
                // padding: 3.5rem 0px 1.8rem;
                color: #fff;
                font:500 2.4rem 'dinpro cond';
                text-align: center;
                text-transform: uppercase;
            }
            .num_paging{
                width: 100%;
                padding: 1rem 0px;
                position: absolute;
                bottom:12rem;
                a{
                    position: relative;
                    margin-right: 3.5rem;
                    width:4rem;
                    height:4rem;
                    color:#000;
                    background: #e8e9d7;
                    font:2.5rem/4rem 'reefont-condensed';
                }
                a:last-child{
                    margin-right: 0;
                }
                a:last-child:after{
                    width: 0;
                }
                a:after{
                    position: absolute;
                    top:2rem;
                    left:3.8rem;
                    content: '';
                    width: 5rem;
                    height: 0.2rem;
                    background: #fff;
                }
                .on{
                    background: #e06900;
                    color: #000;
                }
            }

            .collection_cut{
                overflow: hidden;
                ul{
                    overflow: hidden;

                    li{
                        position: relative;
                        float: left;
                        padding:22rem 0 0 0;

                        .img{
                            // padding:0 1.5rem;
                            overflow: hidden;
                            img{
                                width: 100%;
                            }
                        }

                        .txt{
                            position: absolute;
                            bottom: 30px;
                            width: 100%;
                            p.main{
                                // padding-bottom: 1.2rem;
                                display: block;
                                padding:0 2rem 1rem 2rem;
                                color:#fff;
                                font:1.8rem/1.8rem  'NotoSansKR';
                            }
                            p.desc{
                                display: block;
                                margin:0 2rem;
                                padding-top: 0.5rem;
                                border-top:1px solid #e06900;
                                color:#fff;
                                // letter-spacing: -1px;
                                font:1.1rem/2rem  'NotoSansKR';
                            }
                        }
                    }

                }
            }
            .num_paging{
            }

            .prodlist_wrap{
                position: relative;

                .prodlist{
                    position: absolute;
                    top: 0;
                    left: 0;
                    padding: 0;
                    opacity: 0;
                    transition:opacity 0.3s;
                    -webkit-transition:opacity 0.3s;
                    z-index: 1;

                    .tit{
                        height: 1.4rem;
                        overflow: hidden;

                        display: -webkit-box;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        white-space:normal;
                        -webkit-line-clamp:1;
                        -webkit-box-orient: vertical;
                    }
                }

                .active{
                    opacity: 1;
                    z-index: 2;
                }
                .fake{
                    position: relative;
                    opacity: 0;
                    visibility: hidden;
                }

            }
            }

        }

    .collections2{
        padding: 0 0rem 1.5rem;
        background: url('/images/reebok/about/nano7_w/collection2_bg.jpg') 0 no-repeat;
        background-size: 100% 100%;

        h3{
            padding: 35px 0 30px;
            color: #fff;
            font:500 2.4rem 'dinpro cond';
            text-align: center;
            text-transform: uppercase;
            img{
                @include box-sizing(border-box);
                padding: 0 6rem;
                width: 100%;
            }
        }
        >.desc{
            @include box-sizing(border-box);
            padding:0 10px 15px 0;
            font:300 1rem/1.5rem 'NotoSansKR';
            color:#fff;
            text-align: center;

        }

        .num_paging{
            padding: 15px 0 25px;
            a{
                margin: 0 5px;
                width: 15px;
                height: 15px;
                background: #585859;
                border:0;
            }
            .on{
                background: #fff;
                color: #000;
                border-color: #fff;
            }
        }

        .collection_cut{
            position: relative;
            overflow: hidden;
            ul{
                overflow: hidden;
                li{
                    position: relative;
                    float: left;

                    img{
                        width: 100%;
                    }
                }
            }
            .navi{
                position: absolute;
                top:50%;
                width: 100%;
                text-align: center;
                img{
                    width: 50%;
                }
                .next{
                    position: absolute;
                    right:0;
                }
                .prev{
                    position: absolute;
                    left:0;
                }
            }

        }

        .swiper-button-next2{color:#fff; font-size: 60px;}

        .prodlist_wrap{
            position: relative;
            padding: 0 1rem;
            .prodlist{
                // position: absolute;
                position: relative;
                top: 0;
                left: 0;
                padding: 0;
                opacity: 0;
                transition:opacity 0.3s;
                -webkit-transition:opacity 0.3s;
                z-index: 1;
                .box{
                    .inner{
                        .info{
                            padding:20px 0 30px 12px;
                        }
                    }
                    &.col2{
                        width: 100%;
                        .inner{
                            padding-right: 0;
                            .img{
                                padding-bottom: 55%;
                            }
                            .info{
                                padding: 0 0 0 0;
                                .tit{
                                    display: block;
                                    height: auto;
                                    padding: 20px 12px 17px 12px;
                                    text-align: center;
                                    p{
                                        display: block;
                                        color: #252525;
                                        font: 500 1.7rem 'dinpro cond';
                                        &.btn{
                                            width: 158px;
                                            display: block;
                                            margin: 0 auto;
                                            font:1rem/35px 'NotoSansKR';
                                            border: 1px solid #000;
                                            letter-spacing: -0.3px;
                                            color:#000;
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
                .tit{
                    height: 1.4rem;

                    display: -webkit-box;
                    // overflow: hidden;
                    // overflow: hidden;
                    // text-overflow: ellipsis;
                    // white-space:normal;
                    // -webkit-line-clamp:1;
                    // -webkit-box-orient: vertical;
                }
            }

            .active{
                opacity: 1;
                z-index: 2;
            }
            .fake{
                position: relative;
                opacity: 0;
                visibility: hidden;
            }

        }
    }

    .promotion{
        .top_img{
            img{
                width: 100%;
            }
        }
        .map_list{
            background: #fff;
            padding:1.5rem 1.2rem 1.2rem 1.2rem;
            border-bottom:1px solid #ccc;
            .txt{
                width: 82%;
                float: left;
                .main{
                    font:2rem/2rem  'NotoSansKR';
                    letter-spacing: -0.1rem;
                }
                .address{
                    font:1.1rem/2rem  'NotoSansKR';
                    padding:0.6rem 0 0.2rem 0;
                    letter-spacing: -0.1rem;
                }
                .num{
                    color:#6f6f6f;
                    font:1.1rem/2rem  'NotoSansKR';
                }

            }
            .map_img{
                width: 18%;
                float: right;
                text-align: right;
                padding: 1.8rem 0;
                a{
                    // display: inline-block;
                    background: #000;
                    img{
                        width: 50%
                    }
                }
            }
        }
        .map_list:last-child{
            border-bottom: 0;
        }
    }
    .event_box{
        img{
            width: 100%;
        }
    }
}
// nano w
