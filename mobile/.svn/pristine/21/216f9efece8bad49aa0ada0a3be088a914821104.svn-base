	<script type="text/javascript">

		(function($){


			setTimeout(function(){
				$('.main').addClass('on');
			},1000);
			var owlSlider = $('#slider_owl');

			owlSlider.on('changed.owl.carousel', function(event) {

			});

			owlSlider.owlCarousel({
				stagePadding: 0,
				margin:0,
				items : 1,
				merge: true,
				loop : true,
				navigation: true,
				nav: false,
				autoplay:true,
			});

			setTimeout(function(){
				$('.main').addClass('on');
			},1500);

			$(window).ready(function(){
				var scrollArray = [];
				var scrollContent = document.querySelectorAll('.scrollEvent');


				for(var i = 0; i<scrollContent.length; i++){
					 var mypos = scrollContent[i].offsetTop;
					 scrollArray.push(mypos)
					 console.log(mypos)
				}
				$(window).scroll(function(){
					var thispos = $(this).scrollTop();
					for(var pos = 0; pos<scrollArray.length; pos++){
						if(thispos > scrollArray[pos]){
							$('.scrollEvent').eq(pos).addClass('on');
						}
					}

				});
			});




		})(jQuery);

