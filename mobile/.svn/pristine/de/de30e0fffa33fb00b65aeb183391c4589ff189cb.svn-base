    <script type="text/javascript">

        (function($){
            setTimeout(function(){
                $('.masthead').addClass('scale');
            },300)
            //slider
            $('#slider_owl').owlCarousel({
                stagePadding: 0,
                margin:25,
                items : 1,
                merge: true,
                loop : true,
                navigation: true,
                nav: true
            });
            var gnbH = $('#header').height();
            var masthead = $('.masthead').height();

            $(window).scroll(function(){
                var thisPos = $(this).scrollTop();
                var h = $(window).height;

                var box1_txt = $('.masthead').offset().top ;
                var box2_txt = $('.scrollpoint').offset().top;
                var bottom_m = $('.scrollpoint2').offset().top;
                var bottom_w = $('.scrollpoint3').offset().top ;


                var array1 = [box1_txt, box2_txt, bottom_m, bottom_w];

                for(var index=0; index<array1.length; index++){
                    if(thisPos>array1[index]){
                        $('#footware .scrollevent').eq(index).addClass('scroll');
                    }
                }
                if(thisPos>box2_txt){
                    $('#footware #slider_owl h4').addClass('scroll');
                    $('#footware #slider_owl .txt').addClass('scroll');

                }
            })


        })(jQuery);

