@import './app/css/adidas/scss/common/mixin.scss';
@import './app/css/adidas/scss/common/common.scss';

html,body{
	height: 100%;
}


#container{
	.go_top a{
	width: 100%;
	height: 50px;
	display: block;
	position: relative;
	background: url('/images/adidas/back_top.png') center 10px no-repeat;
	background-size: 60px auto;
	text-indent: -5000px;
	}
	.initiator_pack{
		background:white;
		position: relative;
		overflow: hidden;
		.box1{
			position: relative;
			.tabs{
				display: none;
				&.on{
					display: block;
				}
				.img{
					img{
						width:100%;
					}
				}
				.txt{
					position: absolute;
				    top: 50%;
				    left: 50%;
				    transform: translate(-50%, 0%);
				    width: 100%;
				    padding-left: 3rem;
					h1{
						font: 2.1rem 'adinenuPro-bold';
						color:#fff;
					    line-height: 10px;
					}
					p{
						font-family:'NotoSansKR';
					    font-weight:700;
					    font-size:1.1rem;
						color:#fff;
						margin: 1.5rem 0;
					}
					.btn{
						position: relative;
						display: inline-block;
						background: #fff;
						a{
							display: inline-block;
							position: absolute;
							top:0;
							left: 0;
							width:100%;
							height: 100%;
							z-index: 2;
						}
						span{
							position: relative;
							display: block;
							text-align: center;
							color: #000;
							padding: 12px 9px;
							letter-spacing: 1.5px;
							font-family: 'NotoSansKR';
							font-weight: 700;
							font-size: 1.1rem;
							img{
								width:22%;
								padding-left: 12px;
							}
							&:after{
								display: block;
								content: '';
								clear: both;
								border:1px solid #fff;
								position: absolute;
								top:0;
								left:0;
								width: 100%;
								height: 100%;
								-webkit-transform: translate(3px,3px);
    							transform: translate(3px,3px);
							}
						}
					}
				}
			}
		}
		.tab{
			position: relative;
			.wrap{
					text-align: center;
					background: #ecedef;
					height: 42.5px;
					width: 90%;
					margin: 0 auto;
					line-height: 45px;
				span{
					padding: 0 13px;
					line-height: 41px;
					position: relative;
					font:1.2rem 'adihaus';
					letter-spacing: 1px;
					a{
						color:#000;
						&.active{
							border-bottom: 1px solid #000;
						}
						&:after{
							display: block;
							position: absolute;
							bottom: 0;
							left: 0;
							width: inherit;
						}
					}
					// &:first-child{
					// 	padding-left: 0;
					// }
					// &:last-child{
					// 	padding-right: 0;
					// }
				}
			}
		}
		.box2{
			position: relative;
			background: #515151;
			.grid{
				display: none;
				&:after{
					display: block;
					content: '';
					clear: both;
				}
				&.on{
					display: block;
				}
				.grids{
					width:50%;
					float: left;
					img{
						width:100%;
					}
				}
			}
		}
		.mid{
			position: relative;
			img{
				width:100%;
			}
			.txt{
				position: absolute;
			    top: 50%;
			    left: 50%;
			    transform: translate(-50%, -50%);
			    text-align: center;
				display: none;
				width:100%;
				&.on{
					display: block;
				}
				p{
					font-family:'NotoSansKR';
					font-weight:700;
					font-size:1.2rem;
					color:#fff;
					margin-bottom: 1rem;
					letter-spacing: 1px;
				}
				.btn{
					position: relative;
					display: inline-block;
					background: #fff;
					a{
						display: inline-block;
						position: absolute;
						top:0;
						left: 0;
						width:100%;
						height: 100%;
						z-index: 2;
					}
					span{
						position: relative;
						display: block;
						text-align: center;
						color: #000;
						padding: 12px 10px;
						font-family: 'NotoSansKR';
						font-weight: 700;
						font-size: 1.1rem;
						letter-spacing: 1.5px;
						&:after{
							display: block;
							content: '';
							clear: both;
							border:1px solid #fff;
							position: absolute;
							top:0;
							left:0;
							width: 100%;
							height: 100%;
							-webkit-transform: translate(3px,3px);
							transform: translate(3px,3px);
						}
						img{
							width:22%;
							padding-left: 12px;
						}
					}
				}
			}
		}
		.box3{
			position: relative;
			&:after{
				display: block;
				content: '';
				clear: both;
			}
			.grid2{
				display: none;
				&.on{
					display: block;
				}
				.grids{
					width:50%;
					float: left;
					img{
						width:100%;
					}
				}
			}
		}
		.box4{
			padding:2rem;
			>h1{
				font: 2rem 'adinenuPro-bold';
				text-align: center;
				margin-bottom: 2rem;
			}
			.btm{
				padding-bottom: 2rem;
				.img{
					img{
						width:100%;
					}
				}
				.txt{
						position: absolute;
						top:50%;
						left: 50%;
						transform: translate(-50%,92%);
						text-align: center;
						width: 100%;
					h1{
						font: 1.4rem 'adinenuPro-bold';
						color:#fff;
						letter-spacing: 1px;
					}
					.btn{
						position: relative;
						display: inline-block;
						background: #fff;
						margin-top: .6rem;
						margin-right: 5px;
						a{
							display: inline-block;
							position: absolute;
							top:0;
							left: 0;
							width:100%;
							height: 100%;
							z-index: 2;
						}
						span{
							position: relative;
							display: block;
							text-align: center;
							color: #000;
							padding: 12px 8px;
							font-family:'NotoSansKR';
							font-weight:700;
							font-size:1.1rem;
							letter-spacing: 1.5px;
							&:after{
								display: block;
								content: '';
								clear: both;
								border:1px solid #fff;
								position: absolute;
								top:0;
								left:0;
								width: 100%;
								height: 100%;
								-webkit-transform: translate(3px,3px);
								transform: translate(3px,3px);
							}
							img{
								width:22%;
								padding-left: 12px;
							}
						}
					}
				}
				&:last-child{
					padding-bottom: 0;
				}
				&.x_btm, &.prdt_btm, &.nmzz_btm, &.copa_btm{
					position: relative;
				}
				&.copa_btm{
					.txt{
						transform:translate(-50%,110%);
					}
				}
			}
		}
	}
}
