@import "./app/MO/reebok/css/scss/about.scss";

.always_classic{
    
    .mail_box{
        margin-top: 50px;
        position: relative;
        .inner{
            width: 100%;
            padding: 0 15px;
            overflow: hidden;
            text-align: center;
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
            h2{
                font:700 3.2rem/3.2rem 'dinpro cond';
                color: #000;
                margin-bottom: 10px;
            }
            p{
                font:1.2rem/1.6rem 'NotoSansKR';
                color: #000;
                margin-bottom: 35px;
                letter-spacing: -0.03rem;
                em{
                    font:500 1.2rem/1.2rem 'dinpro cond';
                    color: #000;
                }
            }
            table{
                width: 100%;
                tr{
                    td{
                        height: 40px;
                        &.td-void{
                            height: 30px;
                        }
                    }
                }
            }
            .input-ctm-box{
                height: 40px;
                position: relative;
                border: 1px solid #ccc;
                .input-custom{
                    height: 100%;
                    width: 100%;
                    position: relative;
                    display: block;
                    padding-left: 20px;
                    color: #000;
                    font: 400 14px/44px 'NotoSansKR','Nanum Gothic';
                    background: #fff;
                    z-index: 4;
                    border: 0 none;
                    box-sizing: border-box;
                    -webkit-box-sizing: border-box;
                }
            }
            .btn-signup{
                position: relative;
                display: block;
                width: 100%;
                height: 50px;
                line-height: 50px;
                background: #ab2229;
                font:700 1.5rem/54px 'dinpro cond';
                color: #fff;
                .ico-about{
                    position: absolute;
                    top: 17px;
                    left: 58%;
                    display: inline-block;
                    width: 16px;
                    height: 16px;
                    background: url('http://imagem.reebok.co.kr/images/reebok/about/always/ico-about.png') 0 0 no-repeat;
                    background-size: 16px 16px;
                }                             
            }            
        }    
    }  
}
// always classic

/* select box customize */
.selectbox-ctm{
    height:40px;
    position: relative;
    border: 1px solid  #ccc;
}

.selectbox-ctm select{
    height: 100%;
    width: 100%;
    position: relative;
    display: block;
    padding-left: 20px;
    color: #000;
    font: 400 14px/44px 'NotoSansKR','Nanum Gothic';
    background: #fff;
    z-index: 4;
    border: 0 none;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.selectbox-ctm>.arrow{
    width: 14px;
    height: 8px;
    position: absolute;
    top:50%;
    margin-top: -4px;
    right:14px;
    background-position:-70px -2400px;
    z-index: 5;
}

.selectbox-ctm.red>.arrow{
    background-position: -85px -2400px;
}

.selectbox-ctm.disabled>.arrow{
    opacity: 0.3;
    -ms-filter: alpha(opacity=30);
    filter: alpha(opacity=30);
}

/* check customize */

.input-custom-check {  
    display: block;
    position: relative;
    padding-left: 30px;
    text-align: left;    
    cursor: pointer;
    font:00 14px/20px 'NotoSansKR';
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

/* Hide the browser's default checkbox */
.input-custom-check input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
}

/* Create a custom checkbox */
.checkmark {
    position: absolute;
    top: 0;
    left: 0;
    height: 20px;
    width: 20px;
    background-color: #eee;
}

/* On mouse-over, add a grey background color */
.input-custom-check:hover input ~ .checkmark {
    background-color: #ccc;
}

/* When the checkbox is checked, add a blue background */
.input-custom-check input:checked ~ .checkmark {
    background-color: #ab2229;
}

/* Create the checkmark/indicator (hidden when not checked) */
.checkmark:after {
    content: "";
    position: absolute;
    display: none;
}

/* Show the checkmark when checked */
.input-custom-check input:checked ~ .checkmark:after {
    display: block;
}

/* Style the checkmark/indicator */
.input-custom-check .checkmark:after {
    left: 7px;
    top: 1px;
    width: 4px;
    height: 10px;
    border: solid white;
    border-width: 0 3px 3px 0;
    -webkit-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg);
}
