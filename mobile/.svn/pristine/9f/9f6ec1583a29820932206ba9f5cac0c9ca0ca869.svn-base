    .video_section{
        overflow: hidden;
        position: relative;
        .bg{
            img{
                width: 100%;
            }
        }
        a.btn-video{
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            display: inline-block;
            width: 60px;
            height: 60px;
            text-align: center;
            box-sizing: border-box;
            .ico-video{
                display: inline-block;
