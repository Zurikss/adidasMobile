@import './app/css/adidas/scss/common/mixin.scss';
@import './app/css/adidas/scss/common/common.scss';

#video-layer{
	position:fixed;top:0;left:0;width: 100%;height: 100%;z-index:1000;
}

#video-layer .bg{
	width: 100%;
	height: 100%;

	position: absolute;
	top: 0;
	left: 0;

	transform-origin:center center;
	-webkit-transform-origin:center center;
	transform:scale(0);
	-webkit-transform:scale(0);
	opacity:0;
	background:#000;
	z-index:1;

	transition:all 0.4s;
	-webkit-transition:all 0.4s;


}

#video-layer.loaded .bg{
	opacity: 1;
	transform:scale(1.2);
	-webkit-transform:scale(1.2);
}

#video-layer .video-box{
	position: relative;
	width: 100%;
	height: 100%;
	z-index: 3;
}

#video-layer .close_x_btn{
	width: 70px;
	height: 70px;
	position: absolute;
	top: 0;
	right: 0;
	z-index: 5;
	opacity: 0;
}

#video-layer.loaded .close_x_btn{
	opacity: 1;
}

#alphaskin{
	.btn{
		position: relative;
		display: block;
		top:-10px;
		margin: 0 15px;
		a{
			margin: 0 0 10px 0;
			display: block;
			border:2px solid #3a62a1;
			font:400 14px/46px 'NotoSansKR';
			color:#000;
			text-align:center;

		}
	}
	.top{
		div{
			img{
				width: 100%;
			}
		}
	}
	.video{
		margin: 32px 0 0 0;
		div{
			margin: 0 15px;
			&.txt{
				padding: 38px 0 28px;
				p{
					text-align: center;
					font:400 16px/20px 'NotoSansKR';
					&.b{
						color:#3d52bb;
					}
				}
			}
			&.btn{
				a{
					margin: 0;
				}
			}
			img{
				width: 100%;
			}
		}
	}
	.box{
		position: relative;
		margin: 75px 0 0 0;
		opacity: 0;
		-webkit-opacity: 0;
		transition: all 0.5s;
		-webkit-transition: all 0.5s;
		&.on{
			opacity: 1;
			-webkit-opacity: 1;

		}
		a{
			position: absolute;
			bottom: 4%;
			height: 46px;
			width: 100%;
			text-indent: -9999px;
			&.men{
		    	bottom: 13%;
			}
		}
		div{
			img{
				width: 100%;
			}
		}
	}
}
