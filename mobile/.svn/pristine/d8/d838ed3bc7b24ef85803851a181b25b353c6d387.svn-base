@import './app/css/adidas/scss/common/mixin.scss';
@import './app/css/adidas/scss/common/common.scss';

#video-layer{
	position:fixed;top:0;left:0;width: 100%;height: 100%;z-index:1000;
}

#video-layer .bg{
	width: 100%;
	height: 100%;

	position: absolute;
	top: 0;
	left: 0;

	transform-origin:center center;
	-webkit-transform-origin:center center;
	transform:scale(0);
	-webkit-transform:scale(0);
	opacity:0;
	background:#000;
	z-index:1;

	transition:all 0.4s;
	-webkit-transition:all 0.4s;


}

#video-layer.loaded .bg{
	opacity: 1;
	transform:scale(1.2);
	-webkit-transform:scale(1.2);
}

#video-layer .video-box{
	position: relative;
	width: 100%;
	height: 100%;
	z-index: 3;
}

#video-layer .close_x_btn{
	width: 70px;
	height: 70px;
	position: absolute;
	top: 0;
	right: 0;
	z-index: 5;
	opacity: 0;
}

#video-layer.loaded .close_x_btn{
	opacity: 1;
}

button {
	padding: 0;
	margin: 0;
	cursor: pointer;
	border: 0;
	background-color: transparent; }

button:focus {
	outline: none; }

	/* 모듈 별 셋팅 영역 */
.golf_icon_set {
	background: url("/images/adidas/event/golf/golf_iconSet.png") no-repeat;
}
#container_r {
	background-color: #fff;
	-ms-overflow-style: none;
	&::-webkit-scrollbar {
		display: none;
	}
}

#style_gate{
	background:url('/images/adidas/event/golf/stylebook/bgi_m.jpg') 0 0 no-repeat;
	background-size: cover;
	-webkit-background-size: cover;
	padding-top: 20px;
	position: relative;
	h3 {
		width: 100%;
		color: #fff;
		text-align: center;
		height: 80px;
		font: 40px/80px "adinenuPro-black";
		letter-spacing: 1px;
	}
	/* product-selector START */
	.product-selector{
		position: relative;
		width: 100%;
		padding-bottom: 22%;

		@include css3(transform,translate3d(0,10px,0));
		@include css3(transition,all 0.5s);

		&.loaded{
			opacity: 1;
			@include css3(transform,translate3d(0,0,0));
		}

		.prevent_cover{
			width: 100%;
			height: 100%;
			position: absolute;
			top: 0;
			left: 0;
			z-index: 10;
			display: none;
		}

		img{
			width: 100%;
		}

		.box{
			width: 100%;
			padding-bottom: 100%;
			position: relative;


			a{
				z-index: 3;
				>*{
					width: 75%;
					position: absolute;
					top: 50%;
					left: 50%;

					@include css3(transform,translate3d(-50%,-50%,0));
				}
				.bg{
					&::after{
						content: '';
						position: absolute;
						width: 100%;
						height: 100%;
						background-color: rgba(0, 0, 0, 0.2);
						top: 50%;
						left: 50%;
						@include css3(transform,translate3d(-50%,-50%,0));
						display: block;

					}
				}

				.prod{
					width: 33.3%;
					&.logo2{
						width: 20%;
					}
				}
			}

		}
		.owl-controls{
			width: 100%;
			margin-top: 20px;
			.owl-dots{
				text-align: center;
				.owl-dot{
					width: 10px;
					height: 10px;
					border-radius: 50%;
					background: #fff;
					display: inline-block;
					margin: 0 5px;
					&.active{
						background: #83bb36;
					}
				}
			}
		}
	}
	/* product-selector END */
	.slide_lineup1{
		opacity: 0;
		z-index: -5;
		position: absolute;
		width: 100%;
		height: 100%;
		background-color: #000;
		top: 50%;
		left: 50%;
		@include css3(transform,translate3d(-50%,-50%,0));
		.collection_cut{
			position: relative;
			top: 50%;
			left: 50%;
			@include css3(transform,translate3d(-50%,-50%,0));
		}
		&.on{
			opacity: 1;
			z-index: 5;
		}

		.slide_close{
			position: absolute;
			top: 0;
			right: 0;
		}

        h4{
			font: 22rem/23rem 'AdihausDIN-Cond';
		    text-align: left;
		    color: rgba(255, 255, 255, 0.2);
		    position: absolute;
			top: 26%;
			left: 30%;
			@include css3(transform,translate3d(-50%,-50%,0));
            a{
                color: #cc133f;
            }
        }

		.button_area{
			position: absolute;
		    bottom: 7%;
		    width: 100%;
			.l_gray{
				background: none;
				a{
					border: 1px solid #ddd;
					color:#ddd;
					background: none;
					font-family: 'Decima Mono';
					letter-spacing: 0px;
				}
			}
		}

        .num_paging{
			width: 100%;
			position: absolute;
		    bottom: 22%;
		    text-align: center;
            a{
                background: #ddd;
                border:none;
                width: 1rem;
                height: 1rem;
                margin-right: 0.5rem;
				display: inline-block;
				border-radius: 50%;
            }

            .on{
                background: #83bb36;
            }
        }

        .collection_cut{
            position: relative;
            overflow: hidden;
            ul{
                overflow: hidden;
                li{
                    position: relative;
                    float: left;
                    img{
                        width: 100%;
                    }
                }
            }

        }
    }
