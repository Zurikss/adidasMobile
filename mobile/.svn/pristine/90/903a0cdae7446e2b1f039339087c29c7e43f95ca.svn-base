@import "./app/MO/reebok/css/scss/about.scss";

.craft_by_fitness{
    .ctgr{
        .ctgr_inn{
            margin: 0 1rem;
            display: flex;
            -webkit-display: flex;
            div{
                position: relative;
                width: 50%;
                margin-right: 1rem;
                padding-bottom: 30%;
                background-repeat: no-repeat;
                background-size: 100% auto;
                &.m{
                    margin-right: 0;
                    background-image: url('http://imagem.reebok.co.kr/images/reebok/about/craft_by_fitness/ctgr_m.jpg')
                }
                &.w{
                    background-image: url('http://imagem.reebok.co.kr/images/reebok/about/craft_by_fitness/ctgr_w.jpg')
                }
                span{
                    position: absolute;
                    top:50%;
                    left:50%;
                    @include prefix-css3 (transform, translate(-50%,-50%));
                    z-index: 1;
                    color:#fff;
                    font:1.1rem/60px 'NotosansKR';
                    border:1px solid #8099a2;
                    width: 80%;
                    text-align: center;
                    &:active{
                        background: #8099a2;
                    }
                }
            }
        }

    }
    .video_visual{
        position: relative;
        margin: 2rem 0 1rem;
        &:after{
            content: '';
            display: block;
            position: absolute;
            top:-1rem;
            left:50%;
            margin-left: -45%;
            width: 90%;
            height: 100%;
            background: #e9e9d9;
            z-index: 0;
        }

        .bg{
            z-index: 1;
            video{
                width:100%;
                height: 100%;
                -o-object-fit: cover;
                -webkit-object-fit: cover;
                object-fit: cover;
            }
        }
        .cover{
            text-align: center;
            @include prefix-css3 (transform, translate3d(0,-70%,0));
            h2{
                padding: 1rem 6rem 2rem;
                img{
                    width: 100%;
                }
            }
            .show_video{
                display: inline-block;
                padding: 0 40px;
                border: 1px solid #8099a2;
                color:#fff;
                font:1.3rem/50px 'NotosansKR';
                &:active{
                    background: #8099a2;
                }
            }
        }



    }

    .prd_wrapper{
        position: relative;
        padding: 1rem 0 50px;
        .prd_content{
            &.men{
                .bg{
                    left:15%;
                    width: 100%;
                }
                .prd_boxs{
                    .box{
                        &.hasbg{
                            .bg{
                                left: -4.2rem !important;
                                padding: 0 2.5rem !important;
                            }
                        }
                    }
                }
            }
            .prd_content_inn{
                position: relative;
                padding: 0 2.5rem;
            }
            .bg{
                position: absolute;
                top:0;
                left:0;
                width: 80%;
                padding-bottom: 100%;
                background: #e9e9d9;
            }
            .small_title{
                position: relative;
                padding: 40px 0 0 0;
                font:700 1.2rem 'dinpro cond';
                letter-spacing: 0.5px;
                color:#8099a2;
                span{
                    position: relative;
                    top: -4px;
                    left:10px;
                    display: inline-block;
                    width: 80px;
                    height: 1px;
                    background: #8099a2;

                }
                &.red{
                    color:#b81c25;
                    span{
                        background: #b81c25;
                    }
                }
            }
            .main{
                position: relative;
                z-index: 1;
                p{
                    font:1rem 'NotosansKR';
                    text-transform: uppercase;
                    &.main_txt{
                        padding:15px 0;
                        font-family: 'NotosansKRBold';
                        font-size: 2.5rem;
                        line-height: 2.5rem;
                    }
                }
                .img{
                    padding: 50px 0 25px;
                    img{
                        width: 100%;
                    }
                }

            }
            .prd_boxs{
                .box{
                    @include opacity(0);
                    padding: 20px 0 30px;
                    @include prefix-css3 (transition, 0.5s);
                    &.hasbg{
                        .video{
                            position: relative;
                            video{
                                position: relative;
                                z-index: 2;
                            }
                            .bg{
                                position: absolute;
                                top: -5%;
                                left: -3%;
                                content: '';
                                display: inline-block;
                                width: 100%;
                                padding: 0 100px;
                                height: 107%;
                                z-index: 1;
                                background: #e9e9d9;
                            }
                        }
                    }
                    &.active{
                        top:0;
                        @include opacity(1);
                    }
                    .video{
                        video{
                            width: 100%;
                        }
                    }
                    .txt{
                        p{
                            padding-top: 15px;
                            font: 1rem 'NotosansKR';
                            &.title{
                                position: relative;
                                font: 1.8rem 'NotosansKR';
                                &:after{
                                    position: absolute;
                                    bottom: -5px;
                                    left:0;
                                    content: '';
                                    display: inline-block;
                                    width: 80px;
                                    height: 1px;
                                    background: #000;
                                }
                            }
                            em{
                                font:500 1.5rem 'dinpro cond';
                            }
                        }
                    }
                }
            }
            .col{
                .small_title{
                    padding-bottom: 30px;
                }
                .coll_slider{
                    overflow: hidden;
                    ul{
                        &:after{content: '';display:block;clear: both;}
                        li{
                            position: relative;
                            float: left;
                            .slide_box{
                                &:hover{
                                    .img{
                                        .slide_box_bg{
                                            &:active{
                                                @include opacity (1);
                                                background: rgba(0,0,0,0.6);
                                            }
                                        }
                                    }
                                }
                                .img{
                                    position: relative;
                                    .slide_box_bg{
                                        @include opacity (0);
                                        position: absolute;
                                        top:0;left:0;width: 100%;height: 100%;
                                        background: rgba(0,0,0,0);
                                        .link{
                                            position: absolute;
                                            top:0;
                                            left:0;
                                            width: 100%;
                                            height: 100%;
                                            z-index: 5;
                                        }
                                        .buy{
                                            display: inline-block;
                                            width: 120px;
                                            position: absolute;
                                            top:50%;
                                            left:50%;
                                            @include prefix-css3 (transform,translate(-50%,-50%));
                                            color:#fff;
                                            border:1px solid #fff;
                                            font:1.5rem/40px 'NotosansKR';
                                            text-align: center;
                                        }
                                    }
                                    img{
                                        width: 100%;
                                    }
                                }
                                .txt{
                                    padding: 25px 0;
                                    text-align: center;
                                    font:1.5rem/1.5rem 'NotosansKR';
                                    letter-spacing: -0.5px;
                                    p{
                                        padding: 0 0 2px 0;
                                        font:700 1.2rem 'dinpro cond';
                                        color:#7f7979;
                                    }
                                }
                            }
                        }
                    }
                    .navi{
                        text-align: center;
                        .btn{
                            display: inline-block;
                            padding: 4%;
                            vertical-align: top;
                            img{
                                width: 32px;
                                height: 15px;
                            }
                        }
                        .button_area{
                            // margin: 0 10px;
                        }
                    }
                }
            }
            .button_area{
                display: inline-block;
                &.red{
                    a{
                        border:1px solid #b81c25;
                        color:#b81c25;
                    }
                }
                a{
                    width: 150px;
                    height: 45px;
                    text-align: center;
                    border:1px solid #8099a2;
                    background: none;
                    font:1.1rem/43px 'NotosansKR';
                    color:#8099a2;

                }
            }
        }
    }

}
