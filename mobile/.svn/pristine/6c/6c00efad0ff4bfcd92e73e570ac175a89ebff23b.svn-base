@import './app/css/adidas/scss/common/mixin.scss';
@import './app/css/adidas/scss/common/common.scss';

#on_the_move{
	.button{
		background: #000;
		color: #fff;
		display: inline-block;
		padding: 1.5rem 3rem;
		font-size: 1.15rem;
		letter-spacing: 0;

		&::after{
			margin-left: 3px;
			vertical-align: middle;
			font-size: 1.1rem;
		}
	}

	.masthead{
		img{
			width: 100%;
		}

		.copy{
			padding:3rem 1.5rem;
			background:url('/images/adidas/event/on_the_move/background_statement1.jpg') 0 0 no-repeat;
			background-size: cover;
			-webkit-background-size: cover;
			text-align: center;

			h2{
				font:700 2.8rem/3.4rem 'NotoSansKR';
				text-align: center;
			}

			.button{
				margin-top: 1.5rem;
			}
		}
	}
	/* masthead END */

	.statement{
		padding: 3rem 2rem;
		background:url('/images/adidas/event/on_the_move/background_statement2.jpg') 0 0 no-repeat;
		background-size: cover;
		-webkit-background-size: cover;

		p{
			margin-bottom: 1.5rem;
			color: #fff;
			font-size: 1.05rem;
			line-height: 2rem;
			text-align: center;
			word-break: keep-all;
			letter-spacing: 0;

			&.name{
				margin-bottom: 0;
				font-family: 'NotoSansKR';
				font-size: 1.5rem;
			}
		}
	}
	/* statement END */

	.campaign_box{
		h3{
			padding: 1rem -0px;
			font:700 1.6rem 'NotoSansKR';
			color: #f9f9f9;
			background: #4e4b57;
			text-align: center;
		}

		>div{
			position: relative;
			width: 100%;

			img{
				width: 100%;
			}

			a{
				display: block;
				position: absolute;
			}

			&.camp_view{
				.view{
					top: 73.7%;
					left: 15%;
					width: 70%;
					height: 6%;
				}
			}

			&.camp_prod{
				a{
					width: 25%;
					height: 72%;
					left: 0;
					top: 0;
				}

				.prod_link2{
					left: 25%;
				}

				.prod_link3{
					left: 50%;
				}

				.prod_link4{
					left: auto;
					right: 0;
				}

				.view{
					top: auto;
					left: 3.7%;
					width: 92.6%;
					bottom: 10%;
					height: 16%;
				}

			}
		}
	}
	/* campaign_box END */

	.products_box{
		padding: 1.5rem 0 0;
		background:#fff url('/images/adidas/event/on_the_move/background_products.jpg') 0 0 no-repeat;
		background-size: 100% auto;
		.box{
			width: 100%;
			padding: 0 1.5rem;
			position: relative;
			box-sizing: border-box;
			-webkit-box-sizing: border-box;
			margin-bottom: 1.5rem;

			.img{
				img{
					width: 100%;
				}
			}

			.copy{
				width: 100%;
				position: absolute;
				left: 0;
				bottom: 1.5rem;
				text-align: center;

				>*{
					text-align: center;
					color: #fff;
				}

				h4{
					font-size: 2rem;
					letter-spacing: 3px;
					span{
						font-size: 2rem;
						display: inline-block;
						letter-spacing: 3px;
					}
				}

				.desc{
					margin-bottom: 1.5rem;
					font-size: 1.2rem;
				}

				.button{
					padding: 1rem 6rem;
					background: #fff;
					color: #000;
					font-size: 1rem;
				}
			}

			&.visual{
				padding: 3rem 1.5rem 1.5rem;

				.copy{
					position: relative;
					top: 0;
					bottom: 0;
					padding: 3rem 0 4rem;
					*{
						// margin-bottom: 1rem;
						text-align: center;
						color: #000;
					}

					h4{
						margin-bottom: 0.5rem;
						font-size: 3rem;
						line-height: 3rem;

						span{
							margin-bottom: 0.5rem;
							font-size: 3rem;
						}
					}

					.desc{
						margin-bottom: 1.5rem;
					}

					.button{
						padding: 1.5rem 3rem;
						background: #000;
						color: #fff;
					}
				}
			}
		}

		.box_col2{
			overflow: hidden;
			.box{
				width: 50%;
				float: left;
				padding: 0;
				margin: 0;

				.copy{
					bottom: 3rem;
					h4{
						margin-bottom: 1rem;
						font-size: 2.6rem;
						letter-spacing: 0;
					}
				}

				.button{
					width: 90%;
					padding: 1rem 0;
				}
			}
		}
	}
	/* products_box END */
}

#video-modal-popup{
	.popup{
		width: 100% !important;
		height: 100% !important;

		.close_x_btn{
			top: 0 !important;
		}
	}
}
