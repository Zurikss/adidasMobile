@import "./app/MO/reebok/css/scss/about.scss";

.flexweave{
    .top{
        position: relative;
        a{
            position: absolute;
            display: inline-block;
            width: 100%;
            height: 10%;
            &.a1{
                top:71%;
            }
            &.a2{
                top:84%;
            }
        }
        div{
            img{
                width: 100%;
            }

        }
    }

    .txt{
        padding: 25px 0 10px;
        p{
            &.bold{
                padding: 0 0 5px 0;
                font:500 30px 'NotoSansKR';
            }
            &.small{
                font-size: 1rem;
                font-weight: 300;
                line-height: 1.7rem;
            }
            padding: 0 0 8px 0;
            font:400 15px 'NotoSansKR';
            // text-transform: uppercase;
            text-align: center;
        }
    }

    .video_visual{
        &.type2{
            padding-bottom: 58%;
            .cover{
                .video-btn{
                    top:0;
                }
            }
        }
        .cover{
            h2{
                padding: 0 0 8px 0;
                font-size: 4.3rem;
            }
            p{
                font:500 20px 'dinpro cond';
                letter-spacing: 8px;
            }
            .video-btn{
                top: 34px;
            }
            >*{
                margin: 0 auto;
                color:#fff;
                text-align: center;
                text-transform: uppercase;
            }
        }
    }

    .prd_cuts{
        background: url(/images/reebok/about/flexweave/prd_bg.jpg) 0 0 no-repeat;
        background-size: cover;
        padding: 18px 15px 20px;
        .box{
            .img{
                img{
                    width: 100%;
                }
            }
            .txt{
                padding: 20px 0 40px;
                p{
                    font:300 12px 'NotoSansKR';

                    text-align: left;
                    &.title{
                        font:400 18px 'NotoSansKR';
                    }
                }
            }
        }
    }

    .slide_lineup{
        position: relative;

        .video-btn{
            border:0;
        }
        h2{
            padding: 2.5rem 0 0;
            color: #3f403a;
            font:500 2.5rem/2.5rem 'dinpro cond';
            text-align: center;
            text-transform: uppercase;
        }
        h4{
            font:1rem/16px 'NotoSansKR';
            text-align: center;
            color:#000;
            margin: 5px 0 20px;
            a{
                color: #cc133f;
            }
        }

        .num_paging{
            padding: 1rem 0px;
            a{
                background: #d2d2d2;
                border:none;
                width: 1rem;
                height: 1rem;
                margin-right: 0.5rem;
            }

            .on{
                background: #be282a;
            }
        }

        .collection_cut{
            position: relative;
            overflow: hidden;
            ul{
                overflow: hidden;
                li{
                    position: relative;
                    float: left;
                    img{
                        width: 100%;
                    }
                }
            }
            .navi{
                position: absolute;
                top:50%;
                margin-top: -43px;
                width: 100%;
                text-align: center;
                img{
                    width: 50%;
                }
                .next{
                    position: absolute;
                    right:15px;
                    text-align: right;
                    img{
                        width: 50%;
                    }
                }
                .prev{
                    position: absolute;
                    left:15px;
                    text-align: left;
                    img{
                        width: 50%;
                    }
                }
            }
        }
    }
    .slide_txtt{
        padding: 20px 0 0 0;
        p{
            font: 400 1rem 'NotoSansKR';
            text-align: center;
            color:#666666;
            &.b{
                font: 400 1.5rem 'NotoSansKR';
                padding: 20px 0 10px;
                color:#000;
            }
        }
    }

    .mail_box{
        margin-top: 30px;
        padding: 30px 0;
        position: relative;
        background: url('/images/reebok/about/flexweave/main_bg.png') 0 0 no-repeat;
        background-size: cover;

        .inner{
            width: 100%;
            padding: 0 15px;
            overflow: hidden;
            text-align: center;
            box-sizing: border-box;
            -webkit-box-sizing: border-box;
            h2{
                font: 700 2.5rem/3rem 'NotoSansKR';
                letter-spacing: -2px;
                color: #000;
                margin-bottom: 10px;
                strong{
                    font: 700 2.8rem/3.2rem 'dinpro cond';
                    text-transform: uppercase;
                    letter-spacing: 3px;
                }
            }
            p{
                font:1.1rem/1.6rem 'NotoSansKR';
                color: #000;
                margin-bottom: 25px;
                letter-spacing: -0.03rem;
                em{
                    // font:500 1.2rem/1.2rem 'dinpro cond';
                    color: #b81c25;
                }
            }
            table{
                width: 100%;
                tr{
                    td{
                        height: 40px;
                        &.td-void{
                            height: 25px;
                        }
                        .input-custom-check{
                            color:#ab2328;
                        }
                        .input-custom-check .checkmark:after{
                            top:2px;
                        }
                        .input-custom-check input:checked ~ .checkmark{
                            background: #ab2328;
                        }
                        .detail_wrap{
                            display: inline-block;
                            padding: 10px 9px;
                        }
                    }
                }
            }
            .selectbox-ctm{
                border:0;
            }
            .input-ctm-box{
                height: 40px;
                position: relative;
                // border: 1px solid #ccc;
                .input-custom{
                    height: 100%;
                    width: 100%;
                    position: relative;
                    display: block;
                    padding-left: 20px;
                    color: #000;
                    font: 400 14px/44px 'NotoSansKR','Nanum Gothic';
                    background: #fff;
                    z-index: 4;
                    border: 0 none;
                    box-sizing: border-box;
                    -webkit-box-sizing: border-box;
                }
            }
            .btn-signup{
                position: relative;
                display: block;
                width: 100%;
                height: 50px;
                line-height: 50px;
                // background: #ab2229;
                border: 1px solid #000;
                font: 700 1.8rem/54px 'dinpro cond';
                color: #000;
                .ico-about{
                    position: absolute;
                    top: 17px;
                    left: 58%;
                    display: inline-block;
                    width: 16px;
                    height: 16px;
                    background: url('/images/reebok/about/flexweave/ico-about.png') 0 0 no-repeat;
                    background-size: 16px 16px;
                }
            }
        }
    }

}
// always classic

/* select box customize */
.selectbox-ctm{
    height:40px;
    position: relative;
    border: 1px solid  #ccc;
}

.selectbox-ctm select{
    height: 100%;
    width: 100%;
    position: relative;
    display: block;
    padding-left: 20px;
    color: #000;
    font: 400 14px/44px 'NotoSansKR','Nanum Gothic';
    background: #fff;
    z-index: 4;
    border: 0 none;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}

.selectbox-ctm>.arrow{
    width: 14px;
    height: 8px;
    position: absolute;
    top:50%;
    margin-top: -4px;
    right:14px;
    background-position:-70px -2400px;
    z-index: 5;
}

.selectbox-ctm.red>.arrow{
    background-position: -85px -2400px;
}

.selectbox-ctm.disabled>.arrow{
    opacity: 0.3;
    -ms-filter: alpha(opacity=30);
    filter: alpha(opacity=30);
}

/* check customize */

.input-custom-check {
    display: block;
    position: relative;
    padding-left: 30px;
    text-align: left;
    cursor: pointer;
    font:00 14px/20px 'NotoSansKR';
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}

/* Hide the browser's default checkbox */
.input-custom-check input {
    position: absolute;
    opacity: 0;
    cursor: pointer;
}

/* Create a custom checkbox */
.checkmark {
    position: absolute;
    top: 0;
    left: 0;
    height: 20px;
    width: 20px;
    background-color: #ccc;
}

/* On mouse-over, add a grey background color */
.input-custom-check:hover input ~ .checkmark {
    // background-color: #ab2328;
}

/* When the checkbox is checked, add a blue background */
.input-custom-check input:checked ~ .checkmark {
    // background-color: #ab2229;
    background: #ab2328;
}

/* Create the checkmark/indicator (hidden when not checked) */
.checkmark:after {
    content: "";
    position: absolute;
    // display: none;
}

/* Show the checkmark when checked */
.input-custom-check input:checked ~ .checkmark:after {
    display: block;
}

/* Style the checkmark/indicator */
.input-custom-check .checkmark:after {
    left: 7px;
    top: 1px;
    width: 4px;
    height: 10px;
    border: solid white;
    border-width: 0 3px 3px 0;
    -webkit-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg);
}
