@import './mobile/css/adidas/scss/common/mixin.scss';
@import './mobile/css/adidas/scss/common/common.scss';

#falcon{
	position: relative;
	border-bottom: 1px solid #000;
	.btn {
		display: block;
		margin: 0 10px;
	}

	.btn-adi-dft {
		position: relative;
		padding: 0 1.2rem;
		width: fit-content;
		margin: 0 auto 1rem;
		height: 3rem;
		background: #fff;
		text-align: center;
		z-index: 5;
		transition: .6s;
		a {
			display: inline-block;
			font: 0.9rem/3rem 'NotoSansKR';
			color: #000;
			letter-spacing: 0.1rem;
			span.btn-arrow {
				display: inline-block;
				position: relative;
				top: 2px;
				width: 16px;
				height: 1.2rem;
				background: url('/images/adidas/event/yung96/btn-arrow.png') top left no-repeat;
				background-size: 1.2rem auto;
				margin-left: 1.2rem;
			}
		}
		&::after {
			content: '';
			display: inline-block;
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			border: 1px solid #fff;
			transform: translate(3px, 3px);
			transition: .6s;
			z-index: -1;
		}
		&:hover {
			opacity: 0.8;
			transform: translate(3px, 3px);
			&::after {
			transform: translate(0px, 0);
			}
		}
		&.bl{
			background: #000;
			a {			
				color: #fff;
				span.btn-arrow {
					display: inline-block;
					position: relative;
					top: 2px;
					width: 16px;
					height: 1.2rem;
					background: url('/images/adidas/event/yung96/btn-arrow-w.png') top left no-repeat;
					background-size: 1.2rem auto;
					margin-left: 1.2rem;
				}				
			}
			&::after {			
				border: 1px solid #000;
			}
		}
	}
	div{
		img{
			width: 100%;
		}
		.link{
			position: absolute;
			text-indent: -9999px;
			display: block;
		}
	}
	.visual,.cont,.video_area,.bottom{
		position: relative;
	}

	.visual{
		position: relative;
		&.on{
			.txt{
				opacity: 1;
				-webkit-opacity: 1;
				.btn-buy{
					opacity: 1;
					-webkit-opacity: 1;
				}
			}
		}
		.txt{
			position: absolute;
			width: 100%;
			top:50%;
			left: 50%;
			transform: translate(-50%, -50%);
			text-align: center;
			transition: all 0.6s;
			-webkit-transition: all 0.6s;
			opacity: 0;
			-webkit-opacity: 0;
			h1{
				font: 600 3.4rem/3.4rem 'AdihausDIN';
				color: white;
				letter-spacing: 0.7rem;
			}
			p{
				font: 400 1.3rem/1.3rem 'NotoSansKR';
				color:white;
				padding: 8px 0 22px;
			}
		}
	}

	.statement2{
		position: relative;
		padding: 1rem 0;
		text-align: center;
		&.on{
			p{
				@include css3(opacity,1);
			}
			.btn-buy{
				@include css3(opacity,1);
			}
		}
		&::before, &::after{
			content: "";
			display: inline-block;
			width: 55px;
			height: 5px;
			margin: 1.5rem 0;
			background: #be0022;
		}
		p{
			font:400 1.1rem 'NotoSansKR';
			transition: all 0.6s;
			-webkit-transition: all 0.6s;
			@include css3(opacity,0);
			letter-spacing: 0px;
			&.title{
				padding: 0 0 10px 0;
				font:600 1.3rem 'NotoSansKR';
			}
		}
	}


	section {
		width: 100%;
		overflow: hidden;
		position: relative;

		&.section1{
			article{
				&:nth-child(1) {
					width: 50%;
					.bg{
						transition-delay: 0.1s;
					}
				}
				&:nth-child(2) {
					width: 50%;
					.bg{
						transition-delay: 0.3s;
					}
				}
				&:nth-child(3) {
					width: 100%;
					.bg{
						transition-delay: 0.5s;
					}
				}
			}
		}
		&.section2{
			.row{
				width: 50%;
				position: relative;
				padding-bottom: 180%;
			}
		}
		&.section3{
			
		}
		&.on{
			article{
				.bg{
					@include css3(opacity,1);
				}

			}
		}
		article {
			float: left;
			position: relative;
			width: 100%;
			padding-bottom: 60%;
			box-sizing: border-box;

			> div {
				position: absolute;
				width: 100%;
				height: 100%;
				overflow: hidden;
				cursor: pointer;
				@include css3(opacity,0);
				@include css3(transition, all 0.6s);
			}
			.bg1 {
				background: url('/images/adidas/event/yung96/item_01.jpg');
			}
			.bg2 {
				background: url('/images/adidas/event/yung96/item_02.jpg');
				background-position: bottom center !important;
			}
			.bg3 {
				background: url('/images/adidas/event/yung96/item_03.jpg');				
			}

			.bg4 {
    			height: 33.3333%;
				background: url('/images/adidas/event/yung96/item_04.jpg');
				transition-delay: 0.1s;
			}
			.bg5 {
				height: 66.6666%;
				background: url('/images/adidas/event/yung96/item_05.jpg');
				transition-delay: 0.3s;
			}
			.bg6 {
				position: absolute;
				bottom:0;
				left:0;
				height: 66.6666%;
				background: url('/images/adidas/event/yung96/item_06.jpg');
			    background-position: bottom center !important;
				transition-delay: 0.5s;
			}

			.bg7 {
				position: absolute;
				bottom:0;
				left:0;
				height: 33.3333%;
				background: url('/images/adidas/event/yung96/item_07.jpg');
				background-position: bottom center !important;
				transition-delay: 0.1s;
				.inn_wrap{
					.inn{
						img{
							width: 30%;
						}
						strong{
							padding: 10px 0 0 ;
							font-size: 1.3rem;
						}
					}
				}
			}			
			.bg8 {
				background: url('/images/adidas/event/yung96/item_08.jpg');
				transition-delay: 0.3s;
				.inn_wrap{
					.inn{
						transform: translate(-0%, -50%);
						width: 50%;
					}
				}
			}
			.bg {
				background-size: cover;
				background-position: center center;

			}
		}
	}

	.video{
		position: relative;
		.video_cont{
			position: absolute;
			width: 100%;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			text-align: center;
			img{
				display: inline-block;
				width: 15%;
			}
			p{
				font: 500 1.6rem 'NotoSansKR';
				color:#fff;
				padding-top: 20px;
			}
		}
	}

	.statement3{
		position: relative;
		top:50px;
		padding: 3rem 0.5rem 0;
		text-align: center;
		transition: all 0.6s;
		-webkit-transition: all 0.8s;
		@include css3(opacity,0);
		p{
			font: 400 1.1rem/1.8rem 'NotoSansKR';			
		}
		img{
			width: 100%;
			display: block;
		}
		.prds_box{
			overflow: hidden;
			position: relative;
			margin: 3rem 0;
			a{
				display: inline-block;
				position: absolute;
				width: 50%;
				height: 50%;
				text-indent: -5000px;
			}
		}
		&.on{
			top:0;
			@include css3(opacity,1);
		}
	}

	.bottom{
		position: relative;
		padding: 1rem 0 4rem;
		transition: all 0.6s;
		-webkit-transition: all 0.6s;
		.inn{			
			width: 100%;
			text-align: center;
			p{
				padding: 0 0 8px 0;
		    	font: 600 1.2rem 'AdihausDIN';
				text-transform: uppercase;
				letter-spacing: 0.2rem;
			}
			.btn{
				margin-top: 1rem;
			}
		}
	}
}
